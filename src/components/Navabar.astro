---

const linksPage: {label: string; href: string}[] = [
    {
        label: 'Home', href: '/'
    },
    {
        label: 'Work', href: '#work'
    },
    {
        label: 'Resume', href: '/resume/'
    },
]
---
<div class="sticky top-0 z-30">
    <nav id="navbar" class="grid grid-cols-3 place-content-center">
            <div id="logo" class="py-4 px-4 flex items-center">
                <span class="arrow-down rounded-full"></span>
            </div>
            <div id="links-ancre">
            <ul class="py-2 px-2 rounded flex justify-center">{ linksPage.map(({label, href})=><a href= {href} class="py-4 px-4 text-white text-xl hover:border-dashed hover:border-4 hover:border-red-300">{label}</a>)}</ul>
            </div>    
    </nav>
</div>

<style>


.arrow-down {
  width: 20px;
  height: 20px;
  border: 2px solid #f0eded;
  border-left: 0;
  border-top: 0;
  transform: rotate(45deg);
}
</style>